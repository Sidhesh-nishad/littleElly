---
import Avatar from "../Avatar.astro";
import Button from "../system/Button.astro";
import Text from "../system/Text.astro";
import student3 from "../../images/student3.png"
import { Image } from "astro:assets";

interface TestimonialProps {
  image: string;
  quote: string;
  author: string;
  ctaText: string;
  ctaLink: string;
  imageFade?: boolean;
  className?: string;
  desc?: string;
  authorSubtext?: string;
}

const {image=student3,quote,author,ctaText,ctaLink,imageFade=false,className, desc, authorSubtext} = Astro.props as TestimonialProps
---

<div class=`overflow-hidden mt-l flex flex-row  max-md:flex-col max-md:h-auto ${className} flex-1 bg-white rounded-[35px] py-r px-r max-w-[410px]`>
    <!-- <div class='min-w-[34vw] max-md:w-[100%] max-md:min-h-[136px] bg-cover bg-center rounded-lg' style={{
      backgroundImage: `${imageFade ? 'linear-gradient(90deg, rgba(255, 255, 255, 0) 40.82%, #FFFFFF 95.62%),' : ''} url(${image})`
    }}> -->
    <!-- <slot>
      <img  
        src=`${image.src}`
        class="object-contain max-h-[200px] rounded-[22px]"
      />
    </slot> -->
    <div class='flex flex-col justify-around border-dashed border-[2px] border-[#FF7162] rounded-[25px] overflow-hidden'>
      <Image class={"rounded-[23px]"} src={student3} alt={"image"} class="h-[300px]" />
      
      <div class="p-r">
        <div>
          <Text type="regular" class="text-[#121212] font-[700] italic">
            I am glad I chose Little Elly because
          </Text>
          <Text type="regular" class="text-[#EE7F82] font-[700]">
            {quote}
          </Text>
        </div>
        <Text
            type={'regular'}
            class={'max-md:w-[80%] max-sm:text-center text-[#12121] mt-r'}
        >
         {desc}
        </Text>
        <div class="flex gap-1 flex-col mt-r">
           <!-- <Avatar src={image} /> -->
           <Text type="base" class="text-[#C25668] font-[700] !text-[26px]">
            {author}
          </Text>
        
           <Text type="base" class="text-[#C25668] font-[700] !text-[15px]">
            {authorSubtext}
          </Text>
        
        </div>
       </div>
      
    </div>
  </div>