---
import Avatar from "../Avatar.astro";
import Button from "../system/Button.astro";
import Text from "../system/Text.astro";

interface TestimonialProps {
  image: string;
  quote: string;
  author: string;
  ctaText: string;
  ctaLink: string;
  imageFade?: boolean;
  className?: string;
}

const {image,quote,author,ctaText,ctaLink,imageFade=false,className} = Astro.props as TestimonialProps
---

<div class=`overflow-hidden mt-l flex flex-row  max-md:flex-col max-md:h-auto ${className} flex-1 bg-white rounded-[35px] py-[16px] px-[30px]`>
