---

const {img, title , className,style,index} = Astro.props
import Text from "../system/Text.astro";

---

<div
  class={`scroll-card flex-shrink-0 bg-[#ffffff] rounded-[5.26px] p-5 ${className} w-[450px] max-md:w-[350px] max-sm:w-[300px]`}
  style=`
    box-shadow: 0px 0px 15.77px 0px rgba(0, 0, 0, 0.1);
    transform-origin: top left;
  `   
>
  <img src={img} alt="" class="w-full h-[250px] object-cover rounded-[5.26px] mb-5 max-sm:h-[180px]" />
  <Text type="regular" class="text-black text-center">
      {title}
  </Text>
</div>