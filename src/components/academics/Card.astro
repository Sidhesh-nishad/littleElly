---
import CardLeft from './CardLeft.astro'
import CardRight from './CardRight.astro'

const {
  image,
  title,
  bodyContent,
  border,
  bulletPoints,
  layout="left",
  imagePosition,
  titleSingleLine = false
} = Astro.props;
---

<div class:list={[
  "w-full max-w-[1300px] bg-white  rounded-2xl max-md:rounded-tr-2xl rounded-tr-[160px] flex flex-row max-md:flex-col",
  border === true ? 'border-secondary border-[4px]' : '',
]}>
  {layout === "left" ? (
    <>
      <CardLeft image={image} imagePosition={imagePosition} layout={layout} alt={title.join(' ')} border={border} />
      <CardRight titleSingleLine layout={layout} title={title} bodyContent={bodyContent} bulletPoints={bulletPoints} border={border} />
    </>
  ): (
    <>
      <CardRight titleSingleLine layout={layout} title={title} bodyContent={bodyContent} bulletPoints={bulletPoints} border={border} />
      <CardLeft layout={layout} image={image} imagePosition={imagePosition} layout={layout} alt={title.join(' ')} border={border} />
    </>
  )}
</div>
